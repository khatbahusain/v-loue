  <% if current_user.id == @user.id %>
  <%= link_to new_bike_path, class: "btn btn-default" do %>
      <i class='fa fa-plus fa-2x' aria-hidden='true'></i> Ajouter un vélo
  <% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Photo</th>
      <th scope="col">info sur le vélo</th>
    </tr>
  </thead>
  <% @bikes.each do |bike| %> 


  <tbody>
    <tr>


  

      <td><%=  image_tag bike.imgbike, alt: 'avatar' ,width: '200px', height: '200px'%></td>

      <td> <%= bike.more_info %></td>
      <% if current_user.id == @user.id %>
        <td><a href="<%= bike_path(bike.id) %>" class="btn btn-outline-danger" data-method="DELETE"><i class="far fa-trash-alt"></i></a></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>