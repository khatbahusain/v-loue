<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">bike id</th>
      <th scope="col">more info</th>

    </tr>
  </thead>
  <% @bikes.each do |bike| %> 
  <tbody>
    <tr>
      <th scope="row"></th>
      <td><%= image_tag bike.avatar, alt: 'avatar' ,width: '200px', height: '200px'%></td>
      <td> <%= bike.more_info %></td>
      <td><a href="<%= bike_path(bike.id) %>" class="btn btn-outline-danger" data-method="DELETE">Delete</a></td>
    </tr>
  </tbody>
  <% end %>
</table>