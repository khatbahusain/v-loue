<div class="container-fluid">
  <div class="row">

    <div class="col-3 left-list">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Profil</a>

        <a class="nav-link" id="cart" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Ma Cart</a>

        <a class="nav-link" id="rent" data-toggle="pill" href="#v-pills-rent" role="tab" aria-controls="v-pills-rent" aria-selected="false">Mes locations</a>

        <a class="nav-link" id="comment" data-toggle="pill" href="#v-pills-comment" role="tab" aria-controls="v-pills-comment" aria-selected="false">Commentaires</a>

        <a class="nav-link" id="message" data-toggle="pill" href="#v-pills-message" role="tab" aria-controls="v-pills-message" aria-selected="false">Messages</a>

      </div>
    </div>


    <div class="col-9">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <div class="container">
          <div class="row">
            <div class="col-9">
              <%= render "profil" %>
            </div>
            <div class="col-3">
              <%= render "avatar" %>
              <%= render "btn_under_photo" %>
            </div>
          </div>
        </div>
          
        </div>

      <% if current_user.id == @user.id %>
        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
          <%= render "cart" %>
        </div>
      <% end %>


        <div class="tab-pane fade" id="v-pills-rent" role="tabpanel" aria-labelledby="v-pills-rent-tab">
        <%= render "rent" %> 
        </div>

        <div class="tab-pane fade" id="v-pills-comment" role="tabpanel" aria-labelledby="v-pills-comment-tab">
        <%= render "commentaire" %>   
        </div>


      <% if current_user.id == @user.id %>
        <div class="tab-pane fade" id="v-pills-message" role="tabpanel" aria-labelledby="v-pills-message-tab">   
          <%= render "private_message" %>   
        </div>
      <% end %>

      </div>
    </div>
</div>
